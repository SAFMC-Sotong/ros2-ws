    case PcRes::PUB: // Same as image and depth map
      pc_w = pub_w;
      pc_h = pub_h;
      break;
    case PcRes::FULL:
      pc_w = NEURAL_W;
      pc_h = NEURAL_H;
      break;
    case PcRes::COMPACT:
      pc_w = NEURAL_W / 2;
      pc_h = NEURAL_H / 2;
      break;
    case PcRes::REDUCED:
      pc_w = NEURAL_W / 4;
      pc_h = NEURAL_H / 4;
