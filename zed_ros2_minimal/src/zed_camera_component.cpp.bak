          RCLCPP_WARN_STREAM(get_logger(), result.reason);
          break;
        }

        mPathPubRate = val;

        RCLCPP_INFO_STREAM(
            get_logger(), "Parameter '" << param.get_name()
                                        << "' correctly set to "
                                        << val);
      }
    }

    if (result.successful)
    {
      RCLCPP_INFO_STREAM(
          get_logger(), "Correctly set " << count << "/"
                                         << parameters.size()
                                         << " parameters");
    }
    else
    {
      RCLCPP_INFO_STREAM(
          get_logger(), "Correctly set " << count - 1 << "/"
                                         << parameters.size()
                                         << " parameters");
    }

    return result;
  }

